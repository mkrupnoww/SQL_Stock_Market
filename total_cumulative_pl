WITH dayly_sums AS (
    SELECT
        DATE_TRUNC('day', exit_date)::date AS date_day,
        SUM(profit_loss_fee) AS day_sum
    FROM
        test.sum
    GROUP BY
        DATE_TRUNC('day', exit_date)::date
    ORDER BY
        DATE_TRUNC('day', exit_date)::date
)
SELECT
    date_day,
    ROUND(SUM(day_sum) OVER (ORDER BY date_day)) AS accum
FROM
    dayly_sums
ORDER BY
    date_day;
